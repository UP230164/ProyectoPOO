<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TableColumn?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.posic.proyectopoo.CRUDInventory">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <TableView fx:id="TablaInventario" prefHeight="400.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn fx:id="colNoSerial" prefWidth="75.0" text="No. Serial">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="noSerial" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="nombre" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="colMarca" prefWidth="75.0" text="Marca">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="marca" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="colCodigoCreador" prefWidth="100.0" text="CÃ³d. Creador">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="codigoCreador" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="colTipoJuego" prefWidth="75.0" text="Tipo Juego">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="tipoJuego" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="colTipoAtaque" prefWidth="75.0" text="Tipo Ataque">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="tipoAtaque" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="colModelo" prefWidth="75.0" text="Modelo">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="modelo" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Precio">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="precio" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </children>
    </AnchorPane>
    <Label fx:id="welcomeText" text="Inventario"/>
    <Button text="Regresar" onAction="#MenuPrincipal"/>

</VBox>
